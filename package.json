{
  "name": "liascript",
  "version": "0.9.21",
  "author": "Andr√© Dietrich",
  "license": "BSD-3-Clause",
  "description": "An extended Markdown interpreter for the creation of interactive online courses.",
  "repository": {
    "type": "git",
    "url": "git://github.com/liascript/liascript.git"
  },
  "bugs": {
    "url": "https://github.com/LiaScript/LiaScript/issues",
    "email": "LiaScript@web.de"
  },
  "homepage": "https://github.com/LiaScript/LiaScript/tree/master/README.md",
  "keywords": [
    "LiaScript",
    "education",
    "OER",
    "Markdown"
  ],
  "man": [
    "https://github.com/LiaScript/docs/README.md"
  ],
  "scripts": {
    "init": "npm i && npx gulp iconfont",
    "sw": "npx workbox injectManifest workbox-config.js",
    "translate": "elm-i18n-gen lia-localization/locale src/elm/Translations.elm",
    "test": "npx elm-test",
    "watch": "npm run watch:dev",
    "build": "npm run build:app",
    "build:app": "rm -rf dist && npx parcel build --no-source-maps --public-url . src/entry/app/index.html && npm run sw",
    "watch:app": "npx parcel serve src/entry/app/index.html --open",
    "watch:base": "npx parcel serve src/entry/base/index.html",
    "build:base": "rm -rf dist && npx parcel build --no-source-maps --public-url . src/entry/base/index.html",
    "build:dev": "rm -rf dist && npx parcel build --no-source-maps --public-url . src/entry/dev/index.html && npm run sw",
    "watch:dev": "npx parcel serve src/entry/dev/index.html --open",
    "build:scorm1.2": "rm -rf dist && npx parcel build --no-source-maps --public-url . src/entry/scorm1.2/index.html",
    "watch:scorm1.2": "npx parcel serve src/entry/scorm1.2/index.html",
    "build:worker": "rm -rf dist && rm -rf dist && npx parcel build --no-source-maps --target node src/entry/worker/index.js",
    "watch:webcomponent": "npx parcel serve src/entry/webcomponent/index.html --open",
    "build:webcomponent": "rm -rf dist && npx parcel build --no-source-maps src/entry/webcomponent/index.ts && rm dist/README.md",
    "build:webcomponentPublic": "rm -rf dist && npx parcel build --no-source-maps --public-url https://liascript.github.io/webcomponent/ src/entry/webcomponent/index.ts && rm dist/README.md"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/generator": "^7.12.11",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/runtime": "^7.12.5",
    "@parcel/packager-raw-url": "^2.0.0-beta.2",
    "@parcel/transformer-elm": "^2.0.0-beta.2",
    "@parcel/transformer-sass": "^2.0.0-beta.2",
    "@parcel/transformer-webmanifest": "^2.0.0-beta.2",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "ace-builds": "^1.4.12",
    "async": "^3.2.0",
    "babel-plugin-closure-elimination": "^1.3.2",
    "caniuse-lite": "^1.0.30001239",
    "dexie": "^2.0.4",
    "echarts": "^5.1.2",
    "elm": "^0.19.1-5",
    "elm-hot": "^1.1.6",
    "elm-test": "^0.19.1-revision6",
    "eslint": "^7.19.0",
    "fs": "0.0.1-security",
    "gulp": "^4.0.2",
    "gulp-consolidate": "^0.2.0",
    "gulp-iconfont": "^11.0.0",
    "gulp-rename": "^2.0.0",
    "katex": "^0.13.11",
    "lodash": "^4.17.21",
    "logger.ts": "^1.0.5",
    "node-elm-compiler": "^5.0.5",
    "parcel": "^2.0.0-beta.2",
    "parcel-reporter-multiple-static-file-copier": "^1.0.5",
    "sass": "^1.35.1",
    "simplify-scorm": "0.0.1",
    "tsc": "^2.0.3",
    "typescript": "^4.3.4",
    "workbox-cli": "^6.1.5"
  },
  "browserslist": [
    "cover 80.0%"
  ],
  "multipleStaticFileCopier": [
    {
      "origin": "static",
      "destination": "dist/"
    },
    {
      "origin": "node_modules/ace-builds/src-min-noconflict",
      "destination": "dist/editor/"
    },
    {
      "origin": "node_modules/katex/dist/katex.min.css",
      "destination": "dist/katex.min.css"
    }
  ],
  "presets": [
    "@babel/preset-env"
  ],
  "directories": {
    "test": "tests"
  }
}
