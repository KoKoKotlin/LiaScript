{
  "name": "liascript",
  "version": "0.9.32",
  "author": "Andr√© Dietrich",
  "license": "BSD-3-Clause",
  "description": "An extended Markdown interpreter for the creation of interactive online courses.",
  "repository": {
    "type": "git",
    "url": "git://github.com/liascript/liascript.git"
  },
  "bugs": {
    "url": "https://github.com/LiaScript/LiaScript/issues",
    "email": "LiaScript@web.de"
  },
  "homepage": "https://github.com/LiaScript/LiaScript/tree/master/README.md",
  "keywords": [
    "LiaScript",
    "education",
    "OER",
    "Markdown"
  ],
  "man": [
    "https://github.com/LiaScript/docs/README.md"
  ],
  "scripts": {
    "init": "npm i && npx gulp iconfont",
    "sw": "npx workbox injectManifest workbox-config.js",
    "translate": "elm-i18n-gen lia-localization/locale src/elm/Translations.elm",
    "test": "npx elm-test",
    "watch": "npm run watch:dev",
    "build": "npm run build:app",
    "build:app": "rm -rf dist && ./node_modules/parcel/lib/bin.js build --no-source-maps --public-url . src/entry/app/index.html && npm run sw",
    "watch:app": "./node_modules/parcel-legacy/bin/cli.js serve src/entry/app/index.html --open",
    "watch:base": "./node_modules/parcel-legacy/bin/cli.js serve src/entry/base/index.html",
    "build:base": "rm -rf dist && ./node_modules/parcel/lib/bin.js build --no-source-maps --public-url . src/entry/base/index.html",
    "build:dev": "rm -rf dist && ./node_modules/parcel/lib/bin.js build --no-source-maps --public-url . src/entry/dev/index.html && npm run sw",
    "watch:dev": "./node_modules/parcel-legacy/bin/cli.js serve src/entry/dev/index.html --open",
    "build:preview": "./node_modules/parcel/lib/bin.js build --no-source-maps --public-url . src/typescript/webcomponents/preview-lia.ts",
    "build:scorm1.2": "rm -rf dist && ./node_modules/parcel/lib/bin.js build --no-source-maps --public-url . src/entry/scorm1.2/index.html",
    "watch:scorm1.2": "./node_modules/parcel-legacy/bin/cli.js serve src/entry/scorm1.2/index.html",
    "build:worker": "rm -rf dist && rm -rf dist && ./node_modules/parcel/lib/bin.js build --no-source-maps --target node src/entry/worker/index.js",
    "watch:webcomponent": "./node_modules/parcel-legacy/bin/cli.js serve src/entry/webcomponent/index.html --open",
    "build:webcomponent": "rm -rf dist && ./node_modules/parcel/lib/bin.js build --no-source-maps src/entry/webcomponent/index.ts && rm dist/README.md",
    "build:webcomponentPublic": "rm -rf dist && ./node_modules/parcel/lib/bin.js build --no-source-maps --public-url https://liascript.github.io/webcomponent/ src/entry/webcomponent/index.ts && rm dist/README.md"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.0.0-rc.0",
    "@parcel/transformer-elm": "^2.0.0-rc.0",
    "@parcel/transformer-image": "^2.0.0-rc.0",
    "@parcel/transformer-sass": "^2.0.0-rc.0",
    "@parcel/transformer-webmanifest": "^2.0.0-rc.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "ace-builds": "^1.4.12",
    "async": "^3.2.0",
    "caniuse-lite": "^1.0.30001251",
    "dexie": "^2.0.4",
    "echarts": "^5.1.2",
    "elm": "^0.19.1-5",
    "elm-hot": "^1.1.6",
    "elm-test": "^0.19.1-revision6",
    "eslint": "^7.32.0",
    "fs": "^0.0.1-security",
    "gulp": "^4.0.2",
    "gulp-consolidate": "^0.2.0",
    "gulp-iconfont": "^11.0.0",
    "gulp-rename": "^2.0.0",
    "katex": "^0.13.13",
    "lodash": "^4.17.21",
    "logger.ts": "^1.0.5",
    "node-elm-compiler": "^5.0.6",
    "parcel": "^2.0.0-rc.0",
    "parcel-legacy": "npm:parcel@1.12.3",
    "parcel-reporter-multiple-static-file-copier": "^1.0.5",
    "sass": "^1.38.1",
    "simplify-scorm": "0.0.1",
    "tsc": "^2.0.3",
    "typescript": "^4.3.5",
    "workbox-cli": "^6.2.4"
  },
  "browserslist": [
    "cover 80.0%"
  ],
  "multipleStaticFileCopier": [
    {
      "origin": "static",
      "destination": "dist/"
    },
    {
      "origin": "node_modules/ace-builds/src-min-noconflict",
      "destination": "dist/editor/"
    },
    {
      "origin": "node_modules/katex/dist/katex.min.css",
      "destination": "dist/katex.min.css"
    }
  ],
  "directories": {
    "test": "tests"
  }
}
